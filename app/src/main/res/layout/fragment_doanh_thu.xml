<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#dff9fb"
    tools:context=".fragment.DoanhThuFragment">

   <LinearLayout
       android:padding="12dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="3"
       android:layout_marginTop="20dp">
<Button
    android:background="@drawable/custom_input2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/btnTuNgay"
    android:layout_weight="1"
    android:text="Từ ngày"/>
       <EditText

           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:hint="YYYY/MM/DD"
           android:textColor="#FFFFFF"
           android:id="@+id/edTuNgay"
           android:layout_weight="2"
           android:textSize="18dp"/>
   </LinearLayout>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:background="@drawable/custom_input2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDenNgay"
            android:layout_weight="1"
            android:text="Đến ngày"/>
        <EditText
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="YYYY/MM/DD"
            android:id="@+id/edDenNgay"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>
    <Button
        android:background="@drawable/custom_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDoanhThu"
        android:text="Doanh Thu"
        android:drawableStart="@drawable/ic_money"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
       android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="12dp"
        android:id="@+id/tvDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="100dp"
        android:background="@drawable/custom_input"
        android:text="Doanh Thu"
        android:textSize="30dp" />
</LinearLayout>